<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >

  <!-- NOTE: these don't actually get picked-up automatically since xaml-defined Windows actually derive a new class from Window. -->
  <Style TargetType="{x:Type Window}">
    <Setter Property="OverridesDefaultStyle" Value="True"/>
    <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
    <Setter Property="UseLayoutRounding" Value="True"/>
    <!--<Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"/>-->
  </Style>
  
</ResourceDictionary>